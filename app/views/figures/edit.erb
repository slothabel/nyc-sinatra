

<form action="/figures/<%= @figure.id %>" method="POST">
    <input id="hidden" type="hidden" name="_method" value="patch">

    <br>
    <h2>Existing Figures:</h2>
    <% Figure.all.each do |figure| %>
        <input type="checkbox" name="figure[name]" id="<%= figure.id %>" value="<%= figure.id %>" ><%= figure.name %></input><br>
        <% end %>
    
    
    <br>
        <label>Edit figure name:</label>
    <input type="text" name="figure[name]" id="figure_name" value="<%= @figure.name %>">
    <br>
    <label>Edit figure title:</label>
    <input type="text" name="figure[title_ids]">
    <br>
    <label>Edit figure landmark:</label>
    <input type="text" name="figure[landmark_ids][]" id="new_landmark" >
    
    
    
    <br>
    <input type="submit" value="Edit Figure">
    
    
</form>
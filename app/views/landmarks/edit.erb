<h2>Edit Historical Landmark</h2>

<form action="/landmarks/<%= @landmark.id %>" method="POST"> 
 <input type="hidden" name="_method" value="patch">  

 
 <label>Edit Landmarks:</label><br>
 <% Landmark.all.each do |landmark| %>   
     <label><%= landmark.name %></label>   
      <input type="checkbox" name="landmark[name][]" value="<%= landmark.id %>" id="<%= landmark.name %>" <%='checked' if Landmark.all.include?(landmark) %>>  
      <label><%= landmark.year_completed %></label>   
      <input type="checkbox" name="landmark[year_completed][]" value="<%= landmark.id %>" id="<%= landmark.year_completed %>" <%='checked' if Landmark.all.include?(landmark) %>>  

      <% end %>
       <label>Add New:</label> 
       <input type="text" id="name" name="landmark[name]"><br></br>
       <input type="text" id="year_completed" name="landmark[year_completed]"><br></br>

   <input type="submit" value="Edit Landmark">
</form>


<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/">Home</a>
